    <div id="container">
        <div id="content">
            <table class="table table-hover" border="0" style="border-width:thin; ">
                <thead id="tableHeader">
                    <tr style="background-color:cornflowerblue; ">
                        <th style="font-size:smaller; text-align:center; color:whitesmoke" width="1%">#</th>
                        <th style="font-size:smaller; text-align:center; color:whitesmoke">BATCH ID NO.</th>
                        <th style="font-size:smaller; text-align:center; color:whitesmoke">CHECK<br /> AMOUNT</th>
                        <th style="font-size:smaller; text-align:center; color:whitesmoke">CHECK<br /> NUMBER</th>
                        <th style="font-size:smaller; text-align:center; color:whitesmoke">BRSTN</th>
                        <th style="font-size:smaller; text-align:center; color:whitesmoke">DRAWEE<br />BANK</th>
                        <th style="font-size:smaller; text-align:center; color:whitesmoke">ACCOUNT<br />NUMBER</th>
                        <th style="font-size:smaller; text-align:center; color:whitesmoke">IQA<br />STATUS</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    <tr align="center" ng-repeat="x in summaryDetails" track by $index ng-click="rowSummaryClick(x)">
                        <td align="left" width="1%">{{ $index +1 }}</td>
                        <td align="left" hidden>ID{{ x.INSTRUMENT_ID }}</td>
                        <td>{{ x.BATCH_ID }}</td>
                        <td>{{ x.CAR_AMOUNT }}</td>
                        <td>{{ x.SCAN_INSTRUMENT_NUMBER }}</td>
                        <td>{{ x.BOFD_SORTCODE}}</td>
                        <td>{{ x.NAME  }}</td>
                        <td>{{ x.SCAN_MICR_ACNO }}</td>
                        <td>{{ x.IQA_FAILED_REASON }}</td>
                    </tr>
                </tbody>
                <tr>
                    <td>
                        <button type="button" style="background-color: indianred;float:right" class="btn btn-info" name="btnExport" id="btnExport" ng-model="btnExport">EXPORT</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
<script src="~/ScriptsNg/Controller/Loans/lateCheckSummary.js"></script>