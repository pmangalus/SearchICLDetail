@{ ViewBag.Title = "LLateCheckSummary"; }
<style type='text/css'>
    #container {
        width: 100%;
        float: right;
        margin-right: -400px;
    }

    #content {
        height: 500px;
        width: 75%;
        overflow-x: scroll;
    }

    #sidebar {
        width: 20%;
        float: left;
    }

    .modalTr td,
    tr {
        padding: 4px
    }

    .table-hover td {
        font-size: small;
    }

    .table-hover th {
        border: 1px thin;
        border-radius: 5px;
        border-spacing: 0;
    }

    .table tbody tr:hover td,
    .table tbody tr:hover th {
        background-color: lawngreen;
    }

    .radio label,
    .radio1 label {
        font-size: 14px;
        margin: 10px
    }

    .error {
        position: relative;
        height: 250px;
        padding-top: 30px;
        margin-left: 10px
    }

    .options {
        position: fixed;
        height: 250px;
        width: 100%;
    }

    .radio {
        position: relative;
    }

    .dropdown-content {
        display: none;
        position: relative;
        background-color: burlywood;
        min-width: 220px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }

    .dropdown-content a:hover {
        background-color: #ddd;
    }

    .dropdown-content {
        display: block;
    }
</style>
<form name="yourId" id="yourId" class="form" ng-controller="lateCheckSummary" ng-app="indexApp" >
    <!--     <div class="header">
       </div>-->
    <br />
    <br />
    <div class="header">
        <h1>Loans- Late Check Inquiry Summary</h1>
        <p><i>&nbsp; Displays the summary and details of Late Checks for the day.</i></p>
    </div>
    <div class="sidebar" id="sidebar" style="border:thin;">
        <table border="0" style="width:100%">
            <tr>
                <td>
                    <div class="radio">
                        <label for="radioSearchBatch">
                            <input type="radio" name="radioSearchBatch" id="radioSearchBatch" value="1" ng-model="radioSearchBatch"> Search Batch
                        </label>
                    </div>
                </td>
                <td>
                    <!--  <select id="selectResult" name="selectResult" ng-model="selectResult" class="form-control">
                           <option value="Option one">Option one</option>
                           <option value="Option two">Option two</option>
                            </select>-->
                    <input list="browsers" name="browser" class="form-control">
                    <datalist id="browsers">
                        <option value="Internet Explorer">
                        <option value="Firefox">
                        <option value="Chrome">
                        <option value="Opera">
                        <option value="Safari">
                    </datalist>
                </td>
            </tr>

            <tr>
                <td colspan="2">
                    <div class="radio">
                        <label for="radioExport">
                            <input type="radio" name="radioExport" id="radioExport" value="2"> Export Report
                        </label>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="button" style="float:right" class="btn btn-info" name="btnGo" id="btnGo" ng-model="btnGo" ng-click="btnGoModal()">Proceed Search</button>
                </td>
            </tr>
        </table>
    </div>
